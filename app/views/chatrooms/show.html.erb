<% content_for :javascript do %>
<script>
    window.CHANNEL = "<%= @chatroom.id %>";
    </script>
<% end %>
<h2>Welcome to <%= @chatroom.name %>!</h2>
<div class="chat_container">
  <div class="chat_box">
    <ul id="messages">
      <%= render @messages %>
    </ul>
  </div>

  <div class="chat_entry">
    <%= form_for [@chatroom, @message] do |form| %>
      <%= form.text_field :body %>
      <%= form.submit "Send" %>
    <% end %>
  </div>
</div>

<div class="chat_users">
  <h3><strong>Users</strong></h3>
  <%= button_to "Leave room", [:chatroom_membership], method: :delete %>
    <ul id="users">
      <%= render @chatroom_memberships %>
    </ul>
</div>

