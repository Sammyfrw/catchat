<div>
  <h3>Visit Cat.Chat as a Guest</h3>
  <%= form_for :guest_session, url: guest_session_path do |form| %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.submit "Guest Sign in" %>
    </div>
  <% end %>
</div>

<div>
  <h3>Log in to Cat.Chat</h3>
  <%= form_for :session, url: session_path do |form| %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "User Sign in" %>
    </div>
  <% end %>
</div>

<div>
  <h3>New to Cat.Chat? Sign up</h3>
  <%= form_for @user do |form| %>

    <% if @user.errors.any? %>
      <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
      <ul>
        <% @user.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    <% end %>

    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "Sign up" %>
    </div>
  <% end %>
</div>
